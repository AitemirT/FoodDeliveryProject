@model FoodDelivery.ViewModels.CreateUserViewModel

<h3 class="text-center mb-4">Создать нового пользователя</h3>

<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="UserName">Имя пользователя</label>
                <input asp-for="UserName" type="text" class="form-control"  required/>
                <span asp-validation-for="UserName" class="text-danger"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="Email">Электронная почта</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber">Телефон</label>
                <input asp-for="PhoneNumber" type="text" class="form-control" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="Password">Пароль</label>
                <input id="password" asp-for="Password" type="password" class="form-control" required/>
                <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="form-group mb-3">
                <label asp-for="Role">Роль</label>
                <select asp-for="Role"  class="form-control">
                    <option value="user">Пользователь</option>
                    <option value="admin">Администратор</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>

            </div>
            
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Создать</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script>
    $(document).ready(function(){
        $(".toggle-password").click(function() {
            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") === "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    });
</script>
}